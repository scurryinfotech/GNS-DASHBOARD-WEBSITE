<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

     let isCoffeeActive = false;
    let currentPage = 1;
    let pageSize = 20;
    let isLoading = false;
    let hasMoreData = true;
    let allOrdersData = [];
    let filteredOrdersData = []; // Store filtered results

    $(document).ready(function () {
        initializeCoffeeUI();

        // Set today's date as default
        setTodayDate();

        // Load today's orders by default
        loadOrderHistory(true);

        // Refresh every 5 seconds
        setInterval(function(){
            loadOrderHistory(true);
        }, 5000);

        setupInfiniteScroll();

        $('#coffeeBtn').on('click', function () {
            isCoffeeActive = !isCoffeeActive;
            updateCoffeeUI();
            toggleCoffeeAvailability(isCoffeeActive);
        });

        // Filter button event
        $('#btnFilter').on('click', function () {
            applyDateFilter();
        });

        // Clear button event
        $('#btnClear').on('click', function () {
            clearDateFilter();
        });
    });

    // Set today's date in date inputs
    function setTodayDate() {
        const today = new Date();
        const dateString = today.toISOString().split('T')[0];
        $('#startDate').val(dateString);
        $('#endDate').val(dateString);
    }

    // Calculate and display revenue
    function calculateRevenue(orders) {
        if (!orders || orders.length === 0) {
            $('#totalRevenue').text('₹0.00');
            $('#orderCount').text('0 Orders');
            return;
        }

        // Group by order ID to count unique orders
        const uniqueOrders = {};
        let totalRevenue = 0;

        orders.forEach(order => {
            if (!uniqueOrders[order.orderId]) {
                uniqueOrders[order.orderId] = true;
            }
            totalRevenue += (Number(order.price) || 0);
        });

        const orderCount = Object.keys(uniqueOrders).length;

        $('#totalRevenue').text(`₹${totalRevenue.toFixed(2)}`);
        $('#orderCount').text(`${orderCount} Order${orderCount !== 1 ? 's' : ''}`);
    }

    // Update revenue date range text
    function updateRevenueDateRange(startDate, endDate) {
        const start = new Date(startDate);
        const end = new Date(endDate);

        const today = new Date();
        today.setHours(0, 0, 0, 0);
        start.setHours(0, 0, 0, 0);
        end.setHours(0, 0, 0, 0);

        if (start.getTime() === today.getTime() && end.getTime() === today.getTime()) {
            $('#revenueDateRange').text("Today's Revenue");
        } else if (start.getTime() === end.getTime()) {
            $('#revenueDateRange').text(`Revenue for ${start.toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' })}`);
        } else {
            $('#revenueDateRange').text(`Revenue from ${start.toLocaleDateString('en-IN', { day: '2-digit', month: 'short' })} to ${end.toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' })}`);
        }
    }

    // Apply date filter
    function applyDateFilter() {
        const start = $('#startDate').val();
        const end = $('#endDate').val();

        if (!start || !end) {
            alert("Please select both start and end dates");
            return;
        }

        const startDate = new Date(start);
        startDate.setHours(0, 0, 0, 0);

        const endDate = new Date(end);
        endDate.setHours(23, 59, 59, 999);

        if (startDate > endDate) {
            alert("Start date cannot be after end date");
            return;
        }

        // Filter the data
        filteredOrdersData = allOrdersData.filter(order => {
            const orderDate = new Date(order.date);
            return orderDate >= startDate && orderDate <= endDate;
        });

        // Update revenue display
        updateRevenueDateRange(start, end);
        calculateRevenue(filteredOrdersData);

        // Reset pagination and display filtered results
        currentPage = 1;
        hasMoreData = true;
        $('#orderHistoryTable tbody').empty();
        $('#noMoreData').removeClass('active');

        displayOrdersPage(filteredOrdersData);
    }

    // Clear filter and show today's orders
    function clearDateFilter() {
        setTodayDate();
        applyDateFilter();
    }

    function initializeCoffeeUI() {
        $.ajax({
            url: '/Home/GetCoffeeAvailability',
            method: 'GET',
            success: function (data) {
                isCoffeeActive = (data === true || data === "true");
                updateCoffeeUI();
            },
            error: function () {
                console.warn('Failed to get coffee availability');
            }
        });
    }

    function updateCoffeeUI() {
        if (isCoffeeActive) {
            $('#coffeeBtn')
                .removeClass('connect')
                .addClass('disconnect')
                .text('Disconnect Coffee Orders');
            $('#coffeeStatus')
                .text('Connected')
                .removeClass('disconnected sync-offline')
                .addClass('connected sync-online');
        } else {
            $('#coffeeBtn')
                .removeClass('disconnect')
                .addClass('connect')
                .text('Connect Coffee Orders');
            $('#coffeeStatus')
                .text('Disconnected')
                .removeClass('connected sync-online')
                .addClass('disconnected sync-offline');
        }
    }

    function toggleCoffeeAvailability(isAvailable) {
        $.ajax({
            url: '/Home/SetAvailability',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(isAvailable),
            success: function () {
                if (typeof showNotification === 'function') {
                    showNotification(`Coffee orders ${isAvailable ? 'enabled' : 'disabled'}`, 'success');
                }
            },
            error: function () {
                if (typeof showNotification === 'function') {
                    showNotification('Failed to update coffee availability', 'error');
                }
            }
        });
    }

    function setupInfiniteScroll() {
        const container = $('#tableContainer');

        container.on('scroll', function() {
            if (isLoading || !hasMoreData) return;

            const scrollTop = container.scrollTop();
            const scrollHeight = container[0].scrollHeight;
            const clientHeight = container.height();

            if (scrollTop + clientHeight >= scrollHeight - 100) {
                loadMoreOrders();
            }
        });
    }

    function loadOrderHistory(isInitial = false) {
        if (isInitial) {
            currentPage = 1;
            hasMoreData = true;
        }

        isLoading = true;
        $('#loadingSpinner').addClass('active');

        $.ajax({
            url: '/Home/GetOrderHistory',
            type: 'GET',
            success: function (data) {
                allOrdersData = data || [];

                // Apply today's filter by default
                const start = $('#startDate').val();
                const end = $('#endDate').val();

                if (start && end) {
                    const startDate = new Date(start);
                    startDate.setHours(0, 0, 0, 0);

                    const endDate = new Date(end);
                    endDate.setHours(23, 59, 59, 999);

                    filteredOrdersData = allOrdersData.filter(order => {
                        const orderDate = new Date(order.date);
                        return orderDate >= startDate && orderDate <= endDate;
                    });
                } else {
                    filteredOrdersData = allOrdersData;
                }

                if (isInitial) {
                    $('#orderHistoryTable tbody').empty();
                    updateRevenueDateRange(start, end);
                }

                calculateRevenue(filteredOrdersData);
                displayOrdersPage(filteredOrdersData);

                isLoading = false;
                $('#loadingSpinner').removeClass('active');
            },
            error: function (xhr, status, error) {
                console.error('Error loading order history:', error);
                $('#orderHistoryTable tbody').html(`
                    <tr><td colspan="10" class="text-center text-danger">Failed to load order history</td></tr>
                `);
                isLoading = false;
                $('#loadingSpinner').removeClass('active');
                hasMoreData = false;
            }
        });
    }

    function loadMoreOrders() {
        if (isLoading || !hasMoreData) return;
        currentPage++;
        displayOrdersPage(filteredOrdersData);
    }

    function displayOrdersPage(dataToDisplay = filteredOrdersData) {
        if (!dataToDisplay || dataToDisplay.length === 0) {
            if (currentPage === 1) {
                $('#orderHistoryTable tbody').html(`
                    <tr><td colspan="10" class="text-center text-muted">No orders found for the selected date range.</td></tr>
                `);
            }
            hasMoreData = false;
            $('#noMoreData').addClass('active');
            return;
        }

        // Group orders by orderId
        const groupedOrders = {};
        dataToDisplay.forEach(order => {
            if (!groupedOrders[order.orderId]) {
                groupedOrders[order.orderId] = [];
            }
            groupedOrders[order.orderId].push(order);
        });

        // Sort order IDs in descending order (newest first)
        const sortedOrderIds = Object.keys(groupedOrders).sort((a, b) => b - a);

        // Calculate pagination
        const startIndex = (currentPage - 1) * pageSize;
        const endIndex = startIndex + pageSize;
        const ordersToDisplay = sortedOrderIds.slice(startIndex, endIndex);

        // Check if we have more data
        if (endIndex >= sortedOrderIds.length) {
            hasMoreData = false;
            $('#noMoreData').addClass('active');
        }

        if (ordersToDisplay.length === 0) {
            hasMoreData = false;
            $('#noMoreData').addClass('active');
            return;
        }

        const tbody = $('#orderHistoryTable tbody');

        ordersToDisplay.forEach(orderId => {
            const orders = groupedOrders[orderId];
            const firstOrder = orders[0];
            const totalItems = orders.length;
            const totalAmount = orders.reduce((sum, order) => sum + (Number(order.price) || 0), 0);
            const date = new Date(firstOrder.date).toLocaleString('en-IN');

            const ordersJsonEncoded = encodeURIComponent(JSON.stringify(orders));

            const row = `
                <tr class="table-success">
                    <td><strong>${firstOrder.orderId}</strong></td>
                    <td>${firstOrder.customerName || 'N/A'}</td>
                    <td>${firstOrder.phone || 'N/A'}</td>
                    <td>Table ${firstOrder.tableNo || 'N/A'}</td>
                    <td style="max-width: 200px; overflow-wrap: break-word;">${firstOrder.itemName || 'N/A'}</td>
                    <td><strong>₹${totalAmount.toFixed(2)}</strong></td>
                    <td>${totalItems}</td>
                    <td>${firstOrder.paymentMode || 'N/A'}</td>
                    <td style="white-space: nowrap;">${date}</td>
                    <td>
                        <button class="btn btn-sm btn-info btn-view-order" data-orders="${ordersJsonEncoded}">
                            <i class="fas fa-eye"></i> View
                        </button>
                    </td>
                </tr>
            `;
            tbody.append(row);
        });
    }

    // Keep all your existing functions for viewing orders, printing, etc.
    $(document).on('click', '.btn-view-order', function () {
        const encoded = $(this).attr('data-orders');
        if (!encoded) {
            alert('No order details available');
            return;
        }
        try {
            const orders = JSON.parse(decodeURIComponent(encoded));
            viewOrderDetailss(orders);
        } catch (err) {
            console.error('Failed to parse order details:', err);
            alert('Failed to load order details');
        }
    });

    function viewOrderDetailss(orders) {
        if (!orders || orders.length === 0) {
            alert('No order details available');
            return;
        }

        const firstOrder = orders[0];
        const totalAmount = orders.reduce((sum, order) => sum + (Number(order.price) || 0), 0);
        const date = new Date(firstOrder.date).toLocaleString('en-IN', {
            day: '2-digit',
            month: 'short',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });

        let itemsHtml = '';
        orders.forEach((order, index) => {
            const halfQty = Number(order.halfPortion) || 0;
            const fullQty = Number(order.fullPortion) || 0;
            const qtyText = halfQty > 0 && fullQty > 0
                ? `${halfQty} Half + ${fullQty} Full`
                : halfQty > 0
                    ? `${halfQty} Half`
                    : `${fullQty} Full`;

            itemsHtml += `
                <div class="bill-item">
                    <span><strong>${index + 1}.</strong> ${order.itemName || 'N/A'} <small>(${qtyText})</small></span>
                    <span><strong>₹${(Number(order.price) || 0).toFixed(2)}</strong></span>
                </div>
            `;
        });

        const tax = totalAmount * 0.05;
        const subtotal = totalAmount - tax;

        const billHtml = `
            <div class="bill" id="printable-bill">
                <div class="bill-header">
