@{
    ViewData["Title"] = "Home Page";
}

@section styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Bill Modal Styles */
        #bill-modal {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.7);
        }

            #bill-modal .modal-content {
                background-color: #fefefe;
                margin: 2% auto;
                padding: 0;
                border: 1px solid #888;
                width: 90%;
                max-width: 800px;
                border-radius: 10px;
                box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            }

            #bill-modal .modal-header {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 20px;
                border-radius: 10px 10px 0 0;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            #bill-modal .modal-title {
                margin: 0;
                font-size: 24px;
            }

            #bill-modal .close-btn {
                background: none;
                border: none;
                color: white;
                font-size: 32px;
                cursor: pointer;
                padding: 0;
                width: 40px;
                height: 40px;
                line-height: 40px;
                text-align: center;
                border-radius: 50%;
                transition: background 0.3s;
            }

                #bill-modal .close-btn:hover {
                    background: rgba(255,255,255,0.2);
                }

        #bill-content {
            padding: 20px;
            max-height: 70vh;
            overflow-y: auto;
        }

        .bill {
            font-family: 'Courier New', monospace;
            background: white;
            padding: 30px;
            border: 2px solid #333;
        }

        .bill-header {
            text-align: center;
            border-bottom: 2px dashed #333;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .restaurant-name {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        .restaurant-info {
            font-size: 14px;
            color: #666;
            margin: 5px 0;
        }

        .bill-details {
            margin: 20px 0;
            padding: 15px;
            background: #f9f9f9;
            border-radius: 5px;
        }

        .bill-row {
            display: flex;
            justify-content: space-between;
            margin: 8px 0;
            padding: 5px 0;
        }

        .bill-items {
            margin: 20px 0;
            padding: 15px;
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .bill-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

            .bill-item:last-child {
                border-bottom: none;
            }

        .bill-total {
            margin: 20px 0;
            padding: 20px;
            background: #f0f0f0;
            border-radius: 5px;
            font-weight: bold;
        }

        .bill-footer {
            text-align: center;
            padding-top: 20px;
            border-top: 2px dashed #333;
            margin-top: 20px;
            color: #666;
        }

        .btn-print, .btn-view {
            padding: 12px 30px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: bold;
        }

        .btn-print {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

            .btn-print:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }

        .btn-view {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

            .btn-view:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(245, 87, 108, 0.4);
            }

        media print {
           

        {
            visibility: hidden;
        }

        #printable-bill, #printable-bill * {
            visibility: visible;
        }

        #printable-bill {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        #bill-modal .modal-header,
        .btn-print,
        .btn-view {
            display: none !important;
        }

        }
    </style>
}

<div class="container">

    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
        <h3></h3>
        <a href="/Home/Logout" class="btn btn-danger" id="Logout">Logout</a>
    </div>

    <!--- Live Orders ---------->
    <div class="dashboard-section">
        <div class="section-title">
            <span>📊</span> Live Orders Dashboard
            <div class="position-relative ml-auto">
                <i class="fas fa-bell text-warning" style="font-size: 1.2rem;"></i>
                <span class="notification-badge" id="newOrdersBadge">0</span>
            </div>
        </div>

        <!-- Platform Tabs -->
        <div class="platform-tabs">
            <button class="platform-tab active" data-platform="all" onclick="filterOrders('all')">
                <div class="platform-indicator restaurant-indicator"></div>
                All Orders
            </button>
            <button class="platform-tab zomato" data-platform="zomato" onclick="filterOrders('zomato')">
                <div class="platform-indicator zomato-indicator"></div>
                Zomato
            </button>
            <button class="platform-tab swiggy" data-platform="swiggy" onclick="filterOrders('swiggy')">
                <div class="platform-indicator swiggy-indicator"></div>
                Swiggy
            </button>
            <button class="platform-tab" data-platform="restaurant" onclick="filterOrders('restaurant')">
                <div class="platform-indicator restaurant-indicator"></div>
                Restaurant
            </button>
            <div id="status">
                <button id="zomatoBtn">Disconnect Zomato</button>
                <p>Zomato: <span id="zomatoStatus">Connected</span></p>

                <button id="swiggyBtn">Disconnect Swiggy</button>
                <p>Swiggy: <span id="swiggyStatus">Connected</span></p>

                <div class="online-status-section text-center mt-3">
                    <button id="coffeeBtn" class="btn connect">Turn OFF Coffee Orders</button>
                    <p id="coffeeStatus" class="mt-2 text-success">Coffee Ordering: ON ☕</p>
