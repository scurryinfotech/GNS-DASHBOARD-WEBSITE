                border-bottom: none;
            }

        .bill-total {
            margin: 20px 0;
            padding: 20px;
            background: #f0f0f0;
            border-radius: 5px;
            font-weight: bold;
        }

        .bill-footer {
            text-align: center;
            padding-top: 20px;
            border-top: 2px dashed #333;
            margin-top: 20px;
            color: #666;
        }

        .btn-print, .btn-view {
            padding: 12px 30px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: bold;
        }

        .btn-print {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

            .btn-print:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }

        .btn-view {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

            .btn-view:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(245, 87, 108, 0.4);
            }

        /* Infinite Scroll Styles */
        .table-container {
            position: relative;
            max-height: 600px;
            overflow-y: auto;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

            .table-container::-webkit-scrollbar {
                width: 10px;
            }

            .table-container::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 10px;
            }

            .table-container::-webkit-scrollbar-thumb {
                background: #888;
                border-radius: 10px;
            }

                .table-container::-webkit-scrollbar-thumb:hover {
                    background: #555;
                }

        #orderHistoryTable {
            margin-bottom: 0;
        }

            #orderHistoryTable thead th {
                position: sticky;
                top: 0;
                background: #f8f9fa;
                z-index: 10;
                box-shadow: 0 2px 2px -1px rgba(0, 0, 0, 0.4);
            }

        .loading-spinner {
            text-align: center;
            padding: 20px;
            display: none;
        }

            .loading-spinner.active {
                display: block;
            }

        .spinner-border {
            width: 2rem;
            height: 2rem;
            border: 0.25em solid currentColor;
            border-right-color: transparent;
            border-radius: 50%;
            animation: spinner-border 0.75s linear infinite;
        }

        
        .no-more-data {
            text-align: center;
            padding: 20px;
            color: #6c757d;
            font-style: italic;
            display: none;
        }

            .no-more-data.active {
                display: block;
            }



        /* FIX discount input not editable */
        #paymentModal {
            position: fixed !important;
            z-index: 999999 !important;
        }

        .payment-modal {
            position: relative !important;
            z-index: 1000000 !important;
        }


        #bill-modal {
            display: none !important;
           
        }

        .loading-spinner {
            pointer-events: none !important;
        }

        .table-container {
            pointer-events: auto !important;
        }

