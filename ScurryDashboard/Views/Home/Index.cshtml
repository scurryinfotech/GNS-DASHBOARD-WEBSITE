            opacity: 1;
        }

        }

        .payment-modal-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .payment-options {
            display: flex;
            justify-content: space-between;
            gap: 15px;
        }

        .payment-option {
            border: 2px solid #ddd;
            padding: 15px;
            text-align: center;
            border-radius: 12px;
            width: 48%;
            cursor: pointer;
            transition: 0.2s;
            background: #fafafa;
        }

            .payment-option:hover {
                border-color: #00aaff;
            }

            .payment-option.selected {
                border-color: #00aaff;
                background: #e9f7ff;
            }

        .payment-icon {
            font-size: 35px;
            margin-bottom: 8px;
        }

        /* -------------------------
           DISCOUNT INPUT FIX
        -------------------------- */

        #discountInput {
            width: 100%;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 15px;
            margin-top: 5px;
            background: #fff;
            box-sizing: border-box;
            z-index: 2000;
        }

        /* FIX: Number input not typing */
        /* input[type="number"] {
            -webkit-appearance: none !important;
            appearance: none !important;
            overflow: visible !important;
        }

        input::-webkit-inner-spin-button,
        input::-webkit-outer-spin-button {
            -webkit-appearance: none !important;
            margin: 0 !important;
        } */
        /* Hide only spinner arrows safely */
        input[type="number"]::-webkit-outer-spin-button,
        input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: auto;
            margin: 0;
        }

        input[type="number"] {
            -moz-appearance: textfield; /* Firefox */
        }


        /* Buttons */
        .payment-modal-actions {
            margin-top: 25px;
            display: flex;
            justify-content: space-between;
        }

        .payment-btn {
            padding: 10px 18px;
            border-radius: 6px;
            width: 48%;
            border: none;
            cursor: pointer;
            font-size: 15px;
            transition: 0.2s;
        }

        .payment-btn-cancel {
            background: #f1f1f1;
        }

            .payment-btn-cancel:hover {
                background: #e1e1e1;
            }

        .payment-btn-confirm {
            background: #4CAF50;
            color: #fff;
        }

            .payment-btn-confirm:disabled {
                opacity: 0.4;
                cursor: not-allowed;
            }


    </style>
}

