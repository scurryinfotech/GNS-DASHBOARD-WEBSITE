                border-radius: 10px;
                box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            }

            #bill-modal .modal-header {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 20px;
                border-radius: 10px 10px 0 0;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            #bill-modal .modal-title {
                margin: 0;
                font-size: 24px;
            }

            #bill-modal .close-btn {
                background: none;
                border: none;
                color: white;
                font-size: 32px;
                cursor: pointer;
                padding: 0;
                width: 40px;
                height: 40px;
                line-height: 40px;
                text-align: center;
                border-radius: 50%;
                transition: background 0.3s;
            }

                #bill-modal .close-btn:hover {
                    background: rgba(255,255,255,0.2);
                }

        #bill-content {
            padding: 20px;
            max-height: 70vh;
            overflow-y: auto;
        }

        #bill-content {
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }

        .bill {
            font-family: 'Courier New', monospace;
            background: white;
            padding: 10px;
            border: 1px solid #000;
        }

        .bill-header {
            text-align: center;
            border-bottom: 2px dashed #333;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .restaurant-name {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        .restaurant-info {
            font-size: 14px;
            color: #666;
            margin: 5px 0;
        }

        .bill-details {
            margin: 20px 0;
            padding: 15px;
            background: #f9f9f9;
            border-radius: 5px;
        }

        .bill-row {
            display: flex;
            justify-content: space-between;
            margin: 8px 0;
            padding: 5px 0;
        }

        .bill-items {
            margin: 20px 0;
            padding: 15px;
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .bill-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

