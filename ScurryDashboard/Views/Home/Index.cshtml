@section styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Bill Modal Styles */
        #bill-modal {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.7);
        }

            #bill-modal .modal-content {
                background-color: #fefefe;
                margin: 2% auto;
                padding: 0;
                border: 1px solid #888;
                width: 90%;
                max-width: 800px;
                border-radius: 10px;
                box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            }

            #bill-modal .modal-header {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 20px;
                border-radius: 10px 10px 0 0;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            #bill-modal .modal-title {
                margin: 0;
                font-size: 24px;
            }

            #bill-modal .close-btn {
                background: none;
                border: none;
                color: white;
                font-size: 32px;
                cursor: pointer;
                padding: 0;
                width: 40px;
                height: 40px;
                line-height: 40px;
                text-align: center;
                border-radius: 50%;
                transition: background 0.3s;
            }

                #bill-modal .close-btn:hover {
                    background: rgba(255,255,255,0.2);
                }

        #bill-content {
            padding: 20px;
            max-height: 70vh;
            overflow-y: auto;
        }

        .bill {
            font-family: 'Courier New', monospace;
            background: white;
            padding: 30px;
            border: 2px solid #333;
        }

        .bill-header {
            text-align: center;
            border-bottom: 2px dashed #333;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .restaurant-name {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        .restaurant-info {
            font-size: 14px;
            color: #666;
            margin: 5px 0;
        }

        .bill-details {
            margin: 20px 0;
            padding: 15px;
            background: #f9f9f9;
            border-radius: 5px;
        }

        .bill-row {
            display: flex;
            justify-content: space-between;
            margin: 8px 0;
            padding: 5px 0;
        }

        .bill-items {
            margin: 20px 0;
            padding: 15px;
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .bill-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

            .bill-item:last-child {
                border-bottom: none;
            }

        .bill-total {
            margin: 20px 0;
            padding: 20px;
            background: #f0f0f0;
            border-radius: 5px;
            font-weight: bold;
        }

        .bill-footer {
            text-align: center;
            padding-top: 20px;
            border-top: 2px dashed #333;
            margin-top: 20px;
            color: #666;
        }

        .btn-print, .btn-view {
            padding: 12px 30px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: bold;
        }

        .btn-print {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

            .btn-print:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }

        .btn-view {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

            .btn-view:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(245, 87, 108, 0.4);
            }

        /* Infinite Scroll Styles */
        .table-container {
            position: relative;
            max-height: 600px;
            overflow-y: auto;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

            .table-container::-webkit-scrollbar {
                width: 10px;
            }

            .table-container::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 10px;
            }

            .table-container::-webkit-scrollbar-thumb {
                background: #888;
                border-radius: 10px;
            }

                .table-container::-webkit-scrollbar-thumb:hover {
                    background: #555;
                }

        #orderHistoryTable {
            margin-bottom: 0;
        }

            #orderHistoryTable thead th {
                position: sticky;
                top: 0;
                background: #f8f9fa;
                z-index: 10;
                box-shadow: 0 2px 2px -1px rgba(0, 0, 0, 0.4);
            }

        .loading-spinner {
            text-align: center;
            padding: 20px;
            display: none;
        }

            .loading-spinner.active {
                display: block;
            }

        .spinner-border {
            width: 2rem;
            height: 2rem;
            border: 0.25em solid currentColor;
            border-right-color: transparent;
            border-radius: 50%;
            animation: spinner-border 0.75s linear infinite;
        }

        keyframes spinner-border {
            to

        {
            transform: rotate(360deg);
        }

        }

        .no-more-data {
            text-align: center;
            padding: 20px;
            color: #6c757d;
            font-style: italic;
            display: none;
        }

            .no-more-data.active {
                display: block;
            }

        media print {
            body *

        {
            visibility: hidden;
        }

        #printable-bill, #printable-bill * {
            visibility: visible;
        }

        #printable-bill {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        #bill-modal .modal-header,
        .btn-print,
        .btn-view {
            display: none !important;
        }

        }
    </style>
}

