    </div>

    <!-- Payment Modal -->
    <div id="paymentModal" class="payment-modal-overlay">
        <div class="payment-modal">
            <div class="payment-modal-header">
                <h3>Select Payment Mode</h3>
                <p>Choose how the customer paid for this order</p>
            </div>

            <div class="payment-options">
                <div class="payment-option" data-mode="cash">
                    <div class="payment-icon">💵</div>
                    <h4>Cash</h4>
                    <p>Paid in cash</p>
                </div>
                <div class="payment-option" data-mode="online">
                    <div class="payment-icon">💳</div>
                    <h4>Online</h4>
                    <p>Digital payment</p>
                </div>
            </div>

            <div class="payment-error" id="paymentError">
                Please select a payment mode
            </div>

            <div class="payment-modal-actions">
                <button class="payment-btn payment-btn-cancel" id="cancelPayment">Cancel</button>
                <button class="payment-btn payment-btn-confirm" id="confirmPayment" disabled>Complete Order</button>
            </div>
        </div>
    </div>

    <!-- Order History Section -->
    <h4 class="mt-4 text-success">
        <i class="fas fa-history"></i> Order History
    </h4>

    <div class="table-responsive">
        <table id="orderHistoryTable" class="table table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Customer Name</th>
                    <th>Customer Phone</th>
                    <th>Table No</th>
                    <th>Item Name</th>
                    <th>Price</th>
                    <th>Total Items</th>
                    <th>Payment Mode</th>
                    <th>Date</th>
                    <th>View Bill</th>
                </tr>
            </thead>
            <tbody>
                <!-- History rows will appear here -->
            </tbody>
        </table>
    </div>

    <!-- Bill Modal -->
    <div id="bill-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Order Bill</h2>
                <button class="close-btn" onclick="closeBillModal()">&times;</button>
            </div>
            <div id="bill-content">
                <!-- Bill content will be generated here -->
            </div>
            <div style="text-align: center; margin-top: 20px; gap: 10px; display: flex; justify-content: center; padding: 20px;">
                <button class="btn-print" onclick="printBill()">
                    🖨️ Print Physical Bill
                </button>
                <button class="btn-view" onclick="downloadBill()">
                    💾 Save as PDF
                </button>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Coffee ON/OFF toggle
    let isCoffeeActive = false;

    $(document).ready(function () {
        initializeCoffeeUI();
        loadOrderHistory();

        $('#coffeeBtn').on('click', function () {
            isCoffeeActive = !isCoffeeActive;
            updateCoffeeUI();
            toggleCoffeeAvailability(isCoffeeActive);
        });
    });

    function initializeCoffeeUI() {
        $.ajax({
            url: '/Home/GetCoffeeAvailability',
            method: 'GET',
            success: function (data) {
                isCoffeeActive = (data === true || data === "true");
                updateCoffeeUI();
            },
            error: function () {
                console.warn('Failed to get coffee availability');
            }
        });
    }

    function updateCoffeeUI() {
        if (isCoffeeActive) {
            $('#coffeeBtn')
                .removeClass('connect')
                .addClass('disconnect')
                .text('Disconnect Coffee Orders');
            $('#coffeeStatus')
                .text('Connected')
                .removeClass('disconnected sync-offline')
                .addClass('connected sync-online');
        } else {
            $('#coffeeBtn')
                .removeClass('disconnect')
                .addClass('connect')
                .text('Connect Coffee Orders');
            $('#coffeeStatus')
                .text('Disconnected')
                .removeClass('connected sync-online')
                .addClass('disconnected sync-offline');
        }
    }

    function toggleCoffeeAvailability(isAvailable) {
        $.ajax({
            url: '/Home/SetAvailability',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(isAvailable),
            success: function () {
                if (typeof showNotification === 'function') {
                    showNotification(`Coffee orders ${isAvailable ? 'enabled' : 'disabled'}`, 'success');
                }
            },
            error: function () {
                if (typeof showNotification === 'function') {
                    showNotification('Failed to update coffee availability', 'error');
                }
            }
        });
    }

    // Load order history
    function loadOrderHistory() {
        $.ajax({
            url: '/Home/GetOrderHistory',
            type: 'GET',
            success: function (data) {
                bindOrderHistory(data);
            },
            error: function (xhr, status, error) {
                console.error('Error loading order history:', error);
                $('#orderHistoryTable tbody').html(`
                    <tr><td colspan="10" class="text-center text-danger">Failed to load order history</td></tr>
                `);
            }
        });
    }

    // Bind order history to table
    function bindOrderHistory(data) {
        const tbody = $('#orderHistoryTable tbody');
        tbody.empty();

        if (!data || data.length === 0) {
            tbody.append(`
                <tr><td colspan="10" class="text-center text-muted">No completed orders yet.</td></tr>
            `);
            return;
        }

        // Group orders by orderId
        const groupedOrders = {};
        data.forEach(order => {
            if (!groupedOrders[order.orderId]) {
                groupedOrders[order.orderId] = [];
            }
            groupedOrders[order.orderId].push(order);
        });

        // Sort order IDs in descending order (newest first)
        const sortedOrderIds = Object.keys(groupedOrders).sort((a, b) => b - a);

        // Display one row per order
        sortedOrderIds.forEach(orderId => {
            const orders = groupedOrders[orderId];
            const firstOrder = orders[0];
            const totalItems = orders.length;
            const totalAmount = orders.reduce((sum, order) => sum + (Number(order.price) || 0), 0);
            const date = new Date(firstOrder.date).toLocaleString('en-IN');

            // Safely encode JSON for embedding in a data- attribute
            const ordersJsonEncoded = encodeURIComponent(JSON.stringify(orders));

            const row = `
                <tr class="table-success">
                    <td><strong>${firstOrder.orderId}</strong></td>
                    <td>${firstOrder.customerName || 'N/A'}</td>
                    <td>${firstOrder.phone || 'N/A'}</td>
                    <td>Table ${firstOrder.tableNo || 'N/A'}</td>
                    <td style="max-width: 200px; overflow-wrap: break-word;">${firstOrder.itemName || 'N/A'}</td>
                    <td><strong>₹${totalAmount.toFixed(2)}</strong></td>
                    <td>${totalItems}</td>
                    <td>${firstOrder.paymentMode || 'N/A'}</td>
                    <td style="white-space: nowrap;">${date}</td>
                    <td>
                        <button class="btn btn-sm btn-info btn-view-order" data-orders="${ordersJsonEncoded}">
                            <i class="fas fa-eye"></i> View
                        </button>
                    </td>
                </tr>
            `;
            tbody.append(row);
        });
    }

    
    $(document).on('click', '.btn-view-order', function () {
        const encoded = $(this).attr('data-orders');
        if (!encoded) {
            alert('No order details available');
            return;
        }
        try {
            const orders = JSON.parse(decodeURIComponent(encoded));
            viewOrderDetailss(orders);
        } catch (err) {
            console.error('Failed to parse order details:', err);
            alert('Failed to load order details');
        }
    });
    
    // View order details
    function viewOrderDetailss(orders) {
        
        if (!orders || orders.length === 0) {
            alert('No order details available');
            return;
        }

        const firstOrder = orders[0];
        const totalAmount = orders.reduce((sum, order) => sum + (Number(order.price) || 0), 0);
        const date = new Date(firstOrder.date).toLocaleString('en-IN', {
            day: '2-digit',
            month: 'short',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });

        // Generate items HTML
        let itemsHtml = '';
        orders.forEach((order, index) => {
            const halfQty = Number(order.halfPortion) || 0;
            const fullQty = Number(order.fullPortion) || 0;
            const totalQty = halfQty + fullQty;
            const qtyText = halfQty > 0 && fullQty > 0
                ? `${halfQty} Half + ${fullQty} Full`
                : halfQty > 0
                    ? `${halfQty} Half`
                    : `${fullQty} Full`;

            itemsHtml += `
                <div class="bill-item">
                    <span><strong>${index + 1}.</strong> ${order.itemName || 'N/A'} <small>(${qtyText})</small></span>
                    <span><strong>₹${(Number(order.price) || 0).toFixed(2)}</strong></span>
                </div>
            `;
        });

        // Calculate tax (assuming 5% GST)
        const tax = totalAmount * 0.05;
        const subtotal = totalAmount - tax;

        const billHtml = `
            <div class="bill" id="printable-bill">
                <div class="bill-header">
                    <div class="restaurant-name">Grill N Shakes</div>
                    <div class="restaurant-info">📍 123 Restaurant Street, Ulwe</div>
                    <div class="restaurant-info">📞 Phone: +91-XXXX-XXXXXX</div>
                    <div class="restaurant-info">🌐 www.grillnshakes.com</div>
                </div>

                <div class="bill-details">
                    <div class="bill-row">
                        <span><strong>Order ID:</strong></span>
                        <span>#${firstOrder.orderId}</span>
                    </div>
                    <div class="bill-row">
                        <span><strong>Date & Time:</strong></span>
                        <span>${date}</span>
                    </div>
                    <div class="bill-row">
                        <span><strong>Customer:</strong></span>
                        <span>${firstOrder.customerName || 'Walk-in Customer'}</span>
                    </div>
                    <div class="bill-row">
                        <span><strong>Phone:</strong></span>
                        <span>${firstOrder.phone || 'N/A'}</span>
                    </div>
                    <div class="bill-row">
                        <span><strong>Table No:</strong></span>
                        <span>${firstOrder.tableNo || 'N/A'}</span>
                    </div>
                    <div class="bill-row">
                        <span><strong>Payment Mode:</strong></span>
                        <span><span style="display: inline-block; padding: 2px 8px; background: #28a745; color: white; border-radius: 3px; font-size: 12px;">${firstOrder.paymentMode || 'CASH'}</span></span>
                    </div>
                </div>

                <div class="bill-items">
                    <div style="border-bottom: 2px solid #333; padding-bottom: 10px; margin-bottom: 15px;">
                        <strong>📋 ORDER ITEMS (${orders.length})</strong>
                    </div>
                    ${itemsHtml}
                </div>

                <div class="bill-total">
                    <div class="bill-row" style="margin-bottom: 8px;">
                        <span>Subtotal:</span>
                        <span>₹${subtotal.toFixed(2)}</span>
                    </div>
                    <div class="bill-row" style="margin-bottom: 8px;">
                        <span>GST (5%):</span>
                        <span>₹${tax.toFixed(2)}</span>
                    </div>
                    <div class="bill-row" style="font-size: 1.3em; margin-top: 10px; padding-top: 10px; border-top: 2px solid #333;">
                        <span>GRAND TOTAL:</span>
                        <span>₹${totalAmount.toFixed(2)}</span>
                    </div>
                </div>

                <div class="bill-footer">
                    <p><strong>🙏 Thank you for your order!</strong></p>
                    <p>Please keep this receipt for your records.</p>
                    <p>For any queries, contact us at support@grillnshakes.com</p>
                    <p style="margin-top: 15px; font-size: 0.85em; color: #999;">
                        GST No: 27XXXXX1234X1ZX<br>
                        FSSAI Lic. No: 12345678901234
                    </p>
                </div>
            </div>
        `;

        $('#bill-content').html(billHtml);
        $('#bill-modal').fadeIn(300);
    }

    // Close bill modal
    function closeBillModal() {
        $('#bill-modal').fadeOut(300);
    }

    // Print bill
    function printBill() {
        window.print();
    }

    // Download bill as PDF (simulated)
    function downloadBill() {
        
         const element = document.getElementById('printable-bill');
         html2pdf().from(element).save('bill-' + Date.now() + '.pdf');
    }

   
    $(document).on('click', '#bill-modal', function(e) {
        if (e.target.id === 'bill-modal') {
            closeBillModal();
        }
    });

    // ESC key to close modal
    $(document).keyup(function(e) {
        if (e.key === "Escape") {
            closeBillModal();
        }
    });
</script>