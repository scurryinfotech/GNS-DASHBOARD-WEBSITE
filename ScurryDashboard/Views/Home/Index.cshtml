                display: flex;
            }

        .payment-modal {
            background: #fff;
            width: 420px;
            padding: 25px;
            border-radius: 10px;
            animation: modalPop 0.25s ease-out;
            box-shadow: 0px 4px 20px rgba(0,0,0,0.15);
            z-index: 3;
        }

        @@keyframes modalPop {
            from

        {
            transform: scale(0.85);
