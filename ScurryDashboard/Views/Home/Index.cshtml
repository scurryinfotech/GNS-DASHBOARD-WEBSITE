                <i class="fas fa-bell text-warning" style="font-size: 1.2rem;"></i>
                <span class="notification-badge" id="newOrdersBadge">3</span>
            </div>
        </div>
        <div id="divTable"></div>
    </div>

    <!-- Enhanced Modal -->
